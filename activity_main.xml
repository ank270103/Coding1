activity_main.xml

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:gravity="end"
        android:textSize="32sp"
        android:padding="16dp"
        android:background="@null"
        android:focusable="false"
        android:cursorVisible="false" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_gravity="center">

        <!-- Row 1 -->
        <Button android:id="@+id/buttonClear" android:layout_row="0" android:layout_column="0" android:text="C" />
        <Button android:id="@+id/buttonDivide" android:layout_row="0" android:layout_column="3" android:text="/" />

        <!-- Row 2 -->
        <Button android:id="@+id/button7" android:layout_row="1" android:layout_column="0" android:text="7" />
        <Button android:id="@+id/button8" android:layout_row="1" android:layout_column="1" android:text="8" />
        <Button android:id="@+id/button9" android:layout_row="1" android:layout_column="2" android:text="9" />
        <Button android:id="@+id/buttonMultiply" android:layout_row="1" android:layout_column="3" android:text="*" />

        <!-- Row 3 -->
        <Button android:id="@+id/button4" android:layout_row="2" android:layout_column="0" android:text="4" />
        <Button android:id="@+id/button5" android:layout_row="2" android:layout_column="1" android:text="5" />
        <Button android:id="@+id/button6" android:layout_row="2" android:layout_column="2" android:text="6" />
        <Button android:id="@+id/buttonSubtract" android:layout_row="2" android:layout_column="3" android:text="-" />

        <!-- Row 4 -->
        <Button android:id="@+id/button1" android:layout_row="3" android:layout_column="0" android:text="1" />
        <Button android:id="@+id/button2" android:layout_row="3" android:layout_column="1" android:text="2" />
        <Button android:id="@+id/button3" android:layout_row="3" android:layout_column="2" android:text="3" />
        <Button android:id="@+id/buttonAdd" android:layout_row="3" android:layout_column="3" android:text="+" />

        <!-- Row 5 -->
        <Button android:id="@+id/button0" android:layout_row="4" android:layout_column="0" android:layout_columnSpan="2" android:text="0" />
        <Button android:id="@+id/buttonDecimal" android:layout_row="4" android:layout_column="2" android:text="." />
        <Button android:id="@+id/buttonEquals" android:layout_row="4" android:layout_column="3" android:text="=" />

    </GridLayout>
</LinearLayout>

